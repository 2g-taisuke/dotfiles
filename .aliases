alias dvl="~/development"
alias bi="~/bin"
alias va="~/var"

# 何故かデフォルトでbashdbがinitファイルを読み込まない
alias bashdb="bashdb -x ~/.bashdbinit"

alias reload="exec ${SHELL} -l"
