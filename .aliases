#!/usr/bin/env bash
# navigation
alias dl="cd ~/Downloads"
alias ls="ls --color"
alias less="less -R"
alias mv="mv -i"
alias pbc="pbcopy"
alias pbp="pbpaste"
alias ll="ls -l"
alias la="ls -la"
alias pre="open -a Preview"

# my tools
alias mm="memo"
alias np="nippo"
alias cpc="commands_peco"
alias upc="utils_peco"
alias pd="peco_dir"

# 何故かデフォルトでbashdbがinitファイルを読み込まない
alias bashdb="bashdb -x ~/.bashdbinit"
alias reload="exec ${SHELL} -l"

# keyrepeat
alias keyrepeat_read="defaults read -g KeyRepeat"
alias init_keyrepeat_read="defaults read -g InitialKeyRepeat"

# vagrant
alias vr='vagrant rsync-auto &> rsync.log &'

# docker
alias doc='docker'
alias docmp='docker-compose'

alias da='docker-compose exec php-fpm ./artisan'
alias pu='docker-compose exec php-fpm ./vendor/bin/phpunit'

# git
alias pgd='peco_git_diff'
alias pga='peco_git_add'
