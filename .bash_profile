# -----------------------------------------------------------------------------
# PATH
# -----------------------------------------------------------------------------
if [[ -z $TMUX ]]; then
  if [[ -d "${HOME}/.bash_profile.d" ]]; then
    for f in $(ls "${HOME}/.bash_profile.d"); do
      . "${HOME}/.bash_profile.d/$f"
    done
  fi
  export PATH
  export MANPATH
  tmux
fi


# -----------------------------------------------------------------------------
# load bashrc
# -----------------------------------------------------------------------------
if [[ -f "${HOME}"/.bashrc ]]; then
  . "${HOME}"/.bashrc
fi
